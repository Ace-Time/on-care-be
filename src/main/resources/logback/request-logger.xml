<?xml version="1.0" encoding="UTF-8"?>
<included>
    <!-- 로그 파일이 저장될 경로를 지정 -->
    <property name="LOG_PATH" value="./logs"/>

    <!-- 공통 패턴 -->
    <!-- 로그 출력 형식을 지정
                 %X{traceId}: MDC에 있는 uuid(요청 ~ 반환 키값) %d: 날짜시간, %-5level: 로그 레벨, %thread: 스레드 이름,
                 %logger{36}: 로거 이름(최대 36자),%msg: 로그 메시지, %n: 줄바꿈 -->
    <property name="PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceId}] %-5level [%thread] %logger{36} - %msg%n" />


    <!-- Console Appender: 로그를 콘솔에 출력하기 위한 설정 -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- SYSTEM_ALL Log -->
    <appender name="SYSTEM_ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/current/system_all.log</file>
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>

        <!-- 로그 파일 롤링 정책을 설정 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 날짜별로 로그 파일을 생성 -->
            <fileNamePattern>${LOG_PATH}/%d{yyyy/MM}/requests/%d{yyyy-MM-dd}-system_all.log</fileNamePattern>
            <!-- 최대 30일간의 로그 파일을 보관 -->
            <maxHistory>30</maxHistory>
            <!-- 전체 로그 파일 크기를 최대 3GB로 제한 -->
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>


    <!-- APP_ALL Log -->
    <appender name="APP_ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/current/app_all.log</file>

        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyy/MM}/requests/%d{yyyy-MM-dd}-app_all.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- INFO 전용 -->
    <appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/current/info.log</file>

        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyy/MM}/requests/%d{yyyy-MM-dd}-info.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>


    <!-- WARN 전용 -->
    <appender name="WARN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/current/warn.log</file>

        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyy/MM}/requests/%d{yyyy-MM-dd}-warn.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>


    <!-- ERROR 전용 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/current/error.log</file>

        <encoder>
            <!-- ERROR appender의 encoder에 %ex{full} 같이 추가하면 exception stacktrace를 더 자세히 남길 수 있음 -->
            <pattern>${PATTERN}%n%ex{full}</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyy/MM}/requests/%d{yyyy-MM-dd}-error.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>


    <!-- WARN 전용 -->
    <appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/current/debug.log</file>

        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyy/MM}/requests/%d{yyyy-MM-dd}-debug.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>
</included>